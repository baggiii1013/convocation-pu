# Production Environment Configuration Example
# Copy this to .env for production deployment

NODE_ENV=production
PORT=3001

# Database Configuration
DATABASE_URL="your-production-database-url"

# JWT Configuration - Use strong, unique secrets in production
JWT_SECRET=your-very-secure-jwt-secret-key-min-32-chars
JWT_EXPIRE=15m
JWT_REFRESH_SECRET=your-very-secure-refresh-secret-key-min-32-chars
JWT_REFRESH_EXPIRE=7d

# Frontend URL - Your production domain
FRONTEND_URL=https://yourapp.com

# Security Configuration
COOKIE_DOMAIN=.yourapp.com  # Restrict cookies to your domain and subdomains
# Secure cookies (HTTPS-only) are automatically enabled when NODE_ENV=production

# File Upload Configuration
MAX_FILE_SIZE=10mb
UPLOAD_DIR=./uploads

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Security Settings
BCRYPT_SALT_ROUNDS=12  # Higher is more secure but slower
SESSION_SECRET=your-very-secure-session-secret-min-32-chars

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/api.log

# Analytics
ANALYTICS_ENABLED=true

# Additional Production Security Headers are automatically applied:
# - HTTPS enforcement (secure: true for cookies)
# - Strict SameSite policy (sameSite: 'strict')
# - HttpOnly cookies for sensitive data
# - Path restriction (path: '/')
# - Domain restriction (domain: COOKIE_DOMAIN)
